<h1><%= t("restore_password") %></h1>
<%= form_for :password, url: {action: "restore"}, html: {class: "user_form"} do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: t("form.name") %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: t("form.email") %>
    </div>
    <div class="form-group">
      <%= f.submit t("restore_password"), class: "btn, btn-default" %>
    </div>
<% end %>