<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.content %></td>
        <td><%= link_to 'Edit', edit_ %></td>

      </tr>
  <% end %>
  </tbody>
</table>

